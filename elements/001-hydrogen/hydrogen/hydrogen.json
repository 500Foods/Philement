{
    "ServerName": "Philement/hydrogen",
    "LogFile": "/var/log/hydrogen.log",
    "WebServer": {
        "Enabled": true,
        "EnableIPv6": true,
        "Port": 5000,
        "WebRoot": "/var/www/html",
        "UploadPath": "/api/upload",
        "UploadDir": "/tmp/hydrogen_uploads",
        "MaxUploadSize": 2147483648
    },
    "WebSocket": {
        "Enabled": true,
        "EnableIPv6": true,
        "Port": 5001
    },
    "PrintQueue": {
        "Enabled": true
    },
    "Logging": {
        "Levels": [
            [0, "ALL"],
            [1, "INFO"],
            [2, "WARN"],
            [3, "DEBUG"],
            [4, "ERROR"],
            [5, "CRITICAL"],
            [6, "NONE"]
        ],
        "Console": {
            "Enabled": true,
            "DefaultLevel": 1,
            "Subsystems": {
                "ThreadMgmt": 6,
                "Shutdown": 2,
                "mDNS": 2,
                "WebServer": 2,
                "WebSocket": 2,
                "PrintQueue": 2,
                "LogQueueManager": 2
            }
        },
        "Database": {
            "Enabled": true,
            "DefaultLevel": 4,
            "ConnectionString": "sqlite:///var/lib/hydrogen/logs.db",
            "Subsystems": {
                "ThreadMgmt": 4,
                "Shutdown": 4,
                "mDNS": 4,
                "WebServer": 4,
                "WebSocket": 4,
                "PrintQueue": 4,
                "LogQueueManager": 4
            }
        },
        "File": {
            "Enabled": true,
            "DefaultLevel": 1,
            "Path": "/var/log/hydrogen.log",
            "Subsystems": {
                "ThreadMgmt": 1,
                "Shutdown": 1,
                "mDNS": 1,
                "WebServer": 1,
                "WebSocket": 1,
                "PrintQueue": 1,
                "LogQueueManager": 1
            }
        }
    },
    "mDNS": {
        "Enabled": true,
        "EnableIPv6": true,
        "DeviceId": "hydrogen-printer",
        "FriendlyName": "Hydrogen 3D Printer",
        "Model": "Hydrogen",
        "Manufacturer": "Philement",
        "Version": "0.1.0",
        "Services": [
            {
                "Name": "Hydrogen_Web_Interface",
                "Type": "_http._tcp",
                "Port": 5000,
                "TxtRecords": "path=/api/upload"
            },
            {
                "Name": "Hydrogen_OctoPrint_Emulation",
                "Type": "_octoprint._tcp",
                "Port": 5000,
                "TxtRecords": "path=/api,version=1.1.0"
            },
            {
                "Name": "Hydrogen_WebSocket",
                "Type": "_websocket._tcp",
                "Port": 5001,
                "TxtRecords": "path=/websocket"
            }
        ]
    }
}
